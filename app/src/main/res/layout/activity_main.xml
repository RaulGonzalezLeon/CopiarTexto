<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/boton"
        android:layout_width="116dp"
        android:layout_height="58dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="88dp"
        android:text="Mostrar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nombre" />

    <EditText
        android:id="@+id/nombre"
        android:layout_width="356dp"
        android:layout_height="75dp"
        android:layout_marginStart="98dp"
        android:layout_marginTop="228dp"
        android:layout_marginEnd="103dp"
        android:layout_marginBottom="157dp"
        android:ems="10"
        android:hint="Escribe aqui tu nombre"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/boton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/saludo"
        android:layout_width="193dp"
        android:layout_height="52dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/boton" />

    <Button
        android:id="@+id/bLimpiar"
        android:layout_width="117dp"
        android:layout_height="58dp"
        android:layout_marginStart="73dp"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="80dp"
        android:text="Limpiar"
        app:layout_constraintBottom_toTopOf="@+id/saludo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/boton"
        app:layout_constraintTop_toBottomOf="@+id/nombre" />

</androidx.constraintlayout.widget.ConstraintLayout>